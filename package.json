{
  "name": "create-lemon",
  "version": "0.5.0",
  "type": "module",
  "packageManager": "pnpm@10.18.1",
  "description": "The Elegant Bundler for Libraries",
  "author": {
    "name": "sankeyangshu",
    "email": "sankeyangshu@gmail.com",
    "url": "https://github.com/sankeyangshu"
  },
  "license": "MIT",
  "homepage": "https://github.com/sankeyangshu/create-template#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/sankeyangshu/create-template.git"
  },
  "bugs": {
    "url": "https://github.com/sankeyangshu/create-template/issues"
  },
  "keywords": [
    "lemon-create",
    "create-template",
    "typescript",
    "vue",
    "react",
    "vscode",
    "lemon-react",
    "lemon-vue"
  ],
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist"
  ],
  "engines": {
    "node": "^18.18.0 || >=20.0.0"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    },
    "./package.json": "./package.json"
  },
  "bin": {
    "create-lemon": "./dist/index.js"
  },
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "build": "tsdown",
    "dev": "tsdown --watch",
    "start": "tsx src/index.ts",
    "lint": "eslint",
    "lint:fix": "eslint --fix",
    "test": "vitest",
    "typecheck": "tsc --noEmit",
    "release": "bumpp && pnpm publish",
    "prepublishOnly": "pnpm build",
    "preinstall": "npx only-allow pnpm",
    "prepare": "simple-git-hooks"
  },
  "dependencies": {
    "@clack/prompts": "^0.11.0",
    "ansis": "^4.2.0",
    "cac": "^6.7.14",
    "debug": "^4.4.3",
    "giget": "^2.0.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "@sankeyangshu/eslint-config": "^2.4.0",
    "@types/debug": "^4.1.12",
    "@types/node": "^24.7.0",
    "bumpp": "^10.3.1",
    "eslint": "^9.37.0",
    "execa": "^9.6.0",
    "lint-staged": "^16.2.3",
    "simple-git-hooks": "^2.13.1",
    "tsdown": "^0.15.6",
    "tsx": "^4.20.6",
    "typescript": "^5.9.3",
    "vitest": "^3.2.4"
  },
  "simple-git-hooks": {
    "pre-commit": "pnpm typecheck && pnpm lint-staged",
    "commit-msg": "pnpm exec commitlint --edit $1"
  },
  "lint-staged": {
    "*": "eslint --fix"
  }
}
